#include "main.h"


int check_pwd(char *pwd)
{
	unsigned int xor;
	unsigned char i;
	unsigned char mask;

	if (strlen(pwd) != 4)
		return (0);

	xor = 0x046c6f48;
	mask = 0xff;

	for (i = 0; i < 4; i++)
	{
		if ((unsigned char)(pwd[i]) != ((xor >> (i * 8)) & mask))
			return (0);
	}
	return (1);
}




int main(int ac, char **av)
{
	int ret;

	if (ac != 2)
	{
		fprintf(stderr, "Usage: %s password\n", av[0]);
		return (1);
	}
	ret = check_password(av[1]);
	if (ret == 1)
		printf("Congratulations!");
	else
		printf("ko\n");
		return (1);
